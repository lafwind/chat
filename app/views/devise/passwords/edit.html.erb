
<div class="row form-page">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <div class="form-horizontal">
        <div class="row">
          <div class="col-md-offset-2 col-md-8">
            <%= devise_error_messages! %>
          </div>
        </div>

        <%= f.hidden_field :reset_password_token %>

        <div class="form-group form-hint">
          <div class="col-md-offset-2 col-md-8">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="field form-group">
          <%#= f.label :password, "New password", class: 'col-md-2 control-label' %>
          <div class="col-md-offset-2 col-md-8">
            <%= f.password_field :password, placeholder: "New password", autofocus: true, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>

        <div class="field form-group">
          <%#= f.label :password_confirmation, "Confirm new password", class: 'col-md-2 control-label' %>
          <div class="col-md-offset-2 col-md-8">
            <%= f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "off", class: 'form-control' %>
          </div>
        </div>

        <div class="actions form-group">
          <div class="col-md-offset-2 col-md-8">
            <%= f.submit "Change my password", class: 'btn btn-highlight' %>
          </div>
        </div>

        <div class="col-md-offset-2 col-md-8 devise-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
