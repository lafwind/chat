<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-horizontal">
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :name, class: 'col-md-2 control-label' %>
          <div class="col-md-8">
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :email, class: 'col-md-2 control-label' %>
          <div class="col-md-8">
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>


        <div class="form-group form-hint">
          <div class="col-md-offset-2 col-md-8">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: 'col-md-2 control-label' %>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, class: 'col-md-2 control-label' %>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>

        <div class="actions form-group">
          <div class="col-md-offset-2 col-md-8">
            <%= f.submit "Sign up", class: 'btn btn-highlight' %>
          </div>
        </div>

        <div class="col-md-offset-2 col-md-8 devise-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
