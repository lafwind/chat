<div class="row">
  <div class="col-md-9 col-sm-9 col-xs-9">
    <div class="msg-frame">
      <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-4">
          <div class="middle-gravatar">
            <%= gravatar_for message.user %>
          </div>
        </div>
        <div class="col-md-9 col-sm-9 col-xs-8 leave-right">
          <div class="row">
            <span class="detail"><%= message.user.email %></span>
          </div>

          <div class="row">
            <span class="msg-body">
              <%= message.body %>
            </span>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="time">
  <%= message.timestamp %>
</div>
