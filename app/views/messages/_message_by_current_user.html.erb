<div class="row">
  <div class="col-md-offset-3 col-md-9 col-sm-offset-3 col-sm-9 col-xs-offset-3 col-xs-9">
    <div class="msg-frame msg-by-me">
      <div class="row">
        <div class="col-md-9 col-sm-9 col-xs-8 leave-left">
          <div class="row">
            <span class="msg-body">
              <%= message.body %>
            </span>
          </div>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-4">
          <div class="middle-gravatar">
            <%= link_to profile_path(message.user) do %>
              <%= gravatar_for message.user %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
<div class="time by-me">
  <%= message.timestamp %>
</div>
