<div class="row">
  <div class="col-md-offset-2 col-md-8">

    <h1 class="rooms-header page-header">
      Chat rooms
    </h1>

    <ul class="rooms">
      <%= render @chat_rooms %>
    </ul>

    <% if user_signed_in? %>
      <div class="row">
        <div class="col-md-offset-4 col-md-4">
          <%= link_to 'New chat room', new_chat_room_path, class: 'btn btn-highlight'%>
        </div>
      </div>
    <% end %>

  </div>
</div>
